# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|

  config.vm.box = "<%= box_name %>"
  <% if box_version -%>
  config.vm.box_version = "<%= box_version %>"
  <% end -%>

  # config.vm.network "forwarded_port", guest: 80, host: 8080
  # config.vm.network "forwarded_port", guest: 80, host: 8080, host_ip: "127.0.0.1"
  # config.vm.network "private_network", ip: "192.168.33.10"
  # config.vm.network "public_network"

  # first run: 'disable is true'
  # all other executions: 'disable will be false'
  config.vm.synced_folder ".", "/vagrant", disabled: true

  config.vm.provider "virtualbox" do |vb|
    vb.gui = true
    vb.memory = "1024"
  end

  config.vm.provision "file", source: "../../scripts/profile.aliases.sh", destination: "/etc/profile.d/profile.aliases.sh"
  config.vm.provision "file", source: "../../scripts/profile.ps1.sh"    , destination: "/etc/profile.d/profile.ps1.sh"

  config.vm.provision "shell", path: "../../scripts/sed-colorls.sh"
  config.vm.provision "shell", path: "../../scripts/fs-swap-file.sh"
  config.vm.provision "shell", path: "../../scripts/fs-zero-out.sh"

end

